/* 小程序客户创建页面样式 */
/* 文件: pages/customer/create.wxss */

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

/* 页面头部样式 */
.page-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.header-left {
  display: flex;
  align-items: center;
  padding: 10rpx;
}

.back-text {
  margin-left: 8rpx;
  font-size: 28rpx;
  color: #333;
}

.header-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.header-right {
  padding: 10rpx;
}

.scan-btn {
  font-size: 28rpx;
  color: #1890ff;
}

/* 表单容器样式 */
.form-container {
  flex: 1;
  padding: 20rpx;
}

.form-section {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.section-title {
  padding: 30rpx 30rpx 20rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 表单项样式 */
.form-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.form-item:last-child {
  border-bottom: none;
}

.form-item.error {
  background-color: #fff2f0;
}

.item-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  position: relative;
}

.item-label.required::after {
  content: '*';
  color: #ff4d4f;
  margin-left: 4rpx;
}

.item-input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
  border: 1rpx solid transparent;
  transition: all 0.3s ease;
}

.item-input:focus {
  background-color: #fff;
  border-color: #1890ff;
}

.item-textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
  border: 1rpx solid transparent;
  transition: all 0.3s ease;
}

.item-textarea:focus {
  background-color: #fff;
  border-color: #1890ff;
}

.item-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
  padding: 0 20rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  border: 1rpx solid transparent;
  transition: all 0.3s ease;
}

.item-picker:active {
  background-color: #e6f7ff;
  border-color: #1890ff;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.picker-text.placeholder {
  color: #999;
}

.picker-arrow {
  transform: rotate(90deg);
}

.input-with-unit {
  display: flex;
  align-items: center;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  border: 1rpx solid transparent;
  transition: all 0.3s ease;
}

.input-with-unit:focus-within {
  background-color: #fff;
  border-color: #1890ff;
}

.input-with-unit .item-input {
  flex: 1;
  background-color: transparent;
  border: none;
}

.input-unit {
  padding: 0 20rpx;
  font-size: 26rpx;
  color: #666;
  white-space: nowrap;
}

.error-text {
  position: absolute;
  bottom: 8rpx;
  left: 30rpx;
  font-size: 24rpx;
  color: #ff4d4f;
}

/* 底部操作按钮样式 */
.form-actions {
  display: flex;
  padding: 20rpx;
  gap: 20rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
}

.reset-btn, .submit-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
  font-size: 30rpx;
  border: none;
  transition: all 0.3s ease;
}

.reset-btn {
  background-color: #f8f8f8;
  color: #666;
}

.reset-btn:active {
  background-color: #e8e8e8;
}

.submit-btn {
  background-color: #1890ff;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn:active {
  background-color: #096dd9;
}

.submit-btn:disabled {
  background-color: #d9d9d9;
  color: #999;
}

.submit-btn.loading {
  background-color: #1890ff;
  opacity: 0.8;
}

.loading-spinner {
  width: 32rpx;
  height: 32rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
  border-top: 3rpx solid #fff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-right: 10rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 响应式适配 */
@media (max-width: 375px) {
  .form-item {
    padding: 24rpx;
  }
  
  .section-title {
    padding: 24rpx 24rpx 16rpx;
    font-size: 30rpx;
  }
  
  .item-label {
    font-size: 26rpx;
    margin-bottom: 16rpx;
  }
  
  .item-input, .item-textarea {
    font-size: 26rpx;
  }
  
  .picker-text {
    font-size: 26rpx;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .container {
    background-color: #1a1a1a;
  }
  
  .page-header, .form-section, .form-actions {
    background-color: #2a2a2a;
    border-color: #404040;
  }
  
  .section-title, .item-label, .picker-text {
    color: #fff;
  }
  
  .item-input, .item-textarea, .item-picker, .input-with-unit {
    background-color: #404040;
    color: #fff;
  }
  
  .item-input:focus, .item-textarea:focus, .item-picker:active, .input-with-unit:focus-within {
    background-color: #4a4a4a;
  }
  
  .picker-text.placeholder {
    color: #999;
  }
  
  .input-unit {
    color: #ccc;
  }
  
  .reset-btn {
    background-color: #404040;
    color: #ccc;
  }
  
  .reset-btn:active {
    background-color: #4a4a4a;
  }
}
