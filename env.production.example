# 生产环境配置文件模板
# 使用方法：复制此文件为 .env.production 并填入真实的值

# 数据库配置
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_secure_mongodb_password_here
MONGO_DATABASE=housekeeping_prod

# JWT配置
JWT_SECRET=your_super_secret_jwt_key_at_least_32_characters_long
JWT_EXPIRES_IN=7d

# 腾讯云COS配置
TENCENT_COS_SECRET_ID=your_tencent_cos_secret_id
TENCENT_COS_SECRET_KEY=your_tencent_cos_secret_key
TENCENT_COS_BUCKET=your_bucket_name
TENCENT_COS_REGION=ap-beijing

# 百度OCR配置
BAIDU_OCR_API_KEY=your_baidu_ocr_api_key
BAIDU_OCR_SECRET_KEY=your_baidu_ocr_secret_key

# 域名配置（用于SSL证书申请）
DOMAIN=your-domain.com
DOMAIN_WWW=www.your-domain.com

# 邮件通知配置（可选）
SMTP_HOST=smtp.qq.com
SMTP_PORT=587
SMTP_USER=your_email@qq.com
SMTP_PASS=your_email_password
ALERT_EMAIL=admin@your-domain.com

# 备份配置
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your_backup_bucket
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1 